
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Авторизация</h2>
<form method="post">
    <p>Логин: </p>
    <input type="text" name="login" required/>
    <p>Пароль: </p>
    <input type="password" name="password" required/>
    <input type="submit" title="Отправить"/>
</form>
<a href="/Home/Register">Регистрация</a>
<br />
<b>@ViewBag.Message</b>